<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <style>
  @media (max-width: 767.98px) {
    .col-md-6 {
      width: 100%;
    }
      .flex-grow-1 {
    flex-grow: 1;
  }
  }
</style>
    <title>Blog</title>
  </head>

  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
      <div class="container">
  <div class="row align-items-center">
    <div class="col">
      <h1><%= blog.title %></h1>
    </div>
    <div class="col d-flex justify-content-end align-items-center">
      <span >By : <%= blog.createdBy.fullName %></span>
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" height="50px" alt="Image" class="ms-2" />
    </div>
  </div>
</div>

     <div class="container mt-3">
  <div class="row">
    <div class="col-12 d-flex flex-column align-items-center">
      <img src="<%= blog.coverImageURL %>" class="img-fluid mb-3" alt="Blog Image" />
      <div class="text-center">
        <%= blog.body %>
      </div>
    </div>
  </div>
</div>

    <div class="container mt-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) {%>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment" />
          <button type="submit" class="btn btn-sm btn-primary">Add</button>
        </div>
      </form>

      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div>
          <img
            src="<%= comment.createdBy.profileImageURL %>"
            width="50px"
            alt="Image" /><%= comment.createdBy.fullName %>:
          <pre> <%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/scripts') %>
    </body>
</html>
